<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mostoriginaldudes.codingsabubackend.respository.UserRepository">
    <select id="getUserInfoById" resultType="UserDto">
        SELECT *
         FROM
         WHERE id = #{id}
    </select>

    <update
            id="editUserInfo"
            parameterType="com.mostoriginaldudes.codingsabubackend.dto.request.EditUserInfoRequestDto"
            keyProperty="id"
    >
        UPDATE user
         SET
         password = #{password}
         ,nickname = #{nickname}
         ,phone_num = #{phoneNum}
         ,description = #{description}
         ,profile_image = #{profileImage}
         WHERE
         id = #{id}
    </update>

    <update id="editProfileImage">
        UPDATE user
         SET
         profile_image = #{profileImage}
         WHERE
         id = #{id}
    </update>
</mapper>